	/**
	 * Tests spread method with the starting point: (9, 0);
	 */
	@Test
	public void testSpreadMethod1() {
		char[][] board = new char[10][17];
		LavaMovement lm = new LavaMovement(board);
		lm.spread(board);
		lm.spread(board);
		char expected = 'L';
		char actual = board[8][0];
		assertEquals(expected, actual);
	}
	
